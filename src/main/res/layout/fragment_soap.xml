<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoapFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎来到电视剧推荐界面"
        android:layout_marginLeft="50dp"
        android:textSize="34sp" />
    <!-- TODO: Update blank fragment layout -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        >

        <RelativeLayout
            android:id="@+id/container_items"
            android:layout_width="match_parent"
            android:layout_height="1000dp">

            <FrameLayout
                android:id="@+id/item1"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                android:focusable="true"
                android:gravity="center"
                android:nextFocusLeft="@id/item5"
                android:scaleType="center">

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:nextFocusLeft="@id/imageButton3"
                    android:scaleType="center"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="超兽武装" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/item2"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@id/item1"
                android:focusable="true"
                android:scaleType="center">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:scaleType="center"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="超兽武装" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/item3"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@id/item2"
                android:focusable="true"
                android:scaleType="center">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:scaleType="center"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="超兽武装" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/item4"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@id/item3"
                android:focusable="true"
                android:scaleType="center">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:scaleType="center"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="超兽武装" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/item5"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@id/item4"
                android:focusable="true"
                android:scaleType="center">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:scaleType="center"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="超兽武装" />
            </FrameLayout>
        </RelativeLayout>
    </HorizontalScrollView>

</RelativeLayout>